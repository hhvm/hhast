{
  "roots": [ "src/", "codegen/", "tests/" ],
  "builtinLinters": "all",
  "overrides": [
    {
      "patterns": [ "codegen/*", "tests/examples/*" ],
      "disabledLinters": [
        "Facebook\\HHAST\\UnusedUseClauseLinter",
        "Facebook\\HHAST\\LicenseHeaderLinter"
      ],
      "disableAllAutoFixes": true
    },
    {
      "patterns": [ "src/__Private/Wrap/*" ],
      "disabledLinters": [
        "Facebook\\HHAST\\CamelCasedMethodsUnderscoredFunctionsLinter"
      ]
    },
    {
      "patterns": ["tests/*"],
      "extraLinters": [
        "Facebook\\HHAST\\DataProviderTypesLinter"
      ]
    }
  ],
  "linterConfigs": {
    "Facebook\\HHAST\\HHClientLinter": {
      "Comments (not an actual setting)":
        "The following error codes are ignored with no good reason. They are just existing issues and need to be fixed.",
      "ignore": [5607, 5624, 5639]
    }
  }
}
